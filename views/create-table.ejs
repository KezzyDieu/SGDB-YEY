<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crear Tabla</title>
    <link rel="stylesheet" href="/css/stilotabla.css">
</head>
<body>
   <div class="container">
    <h1>Crear Tabla</h1>

    <form action="/tables/create" method="POST">
        <div>
            <label for="dbName">Nombre de la base de datos:</label>
            <input type="text" id="dbName" name="dbName" required>
        </div>
        <div>
            <label for="tableName">Nombre de la tabla:</label>
            <input type="text" id="tableName" name="tableName" required>
        </div>
        <div id="fields">
            <h2>Campos:</h2>
            <!-- Campo 1 -->
            <div class="field">
              <div class="field-group">
                  <label for="fieldName1">Nombre del campo: </label>
                  <input type="text" id="fieldName1" name="fieldName[]" required>
              </div>
              <div class="field-group">
                  <label for="fieldType1">Tipo de dato: </label>
                  <select id="fieldType1" name="fieldType[]" required>
                      <option value="INT">INT</option>
                      <option value="VARCHAR">VARCHAR</option>
                      <option value="TEXT">TEXT</option>
                      <option value="DATE">DATE</option>
                  </select>
              </div>
              <div class="field-group">
                  <label for="fieldSize1">Tamaño del dato: </label>
                  <input type="number" id="fieldSize1" name="fieldSize[]" min="1">
              </div>
              <div class="field-group">
                  <label for="primaryKey1">Primary Key:</label>
                  <input type="checkbox" id="primaryKey1" name="primaryKey[]" value="true">
              </div>
          </div>
          
        </div>
        <button type="button" id="addFieldBtn">Añadir campo:</button>
        <button type="submit">Create Table</button>
    </form>

    <a href="/">Volver a la pagina principal</a>
   </div>

    <script>
      let fieldCount = 1;

document.getElementById('addFieldBtn').addEventListener('click', () => {
    fieldCount++;
    const fieldsDiv = document.getElementById('fields');
    const newFieldDiv = document.createElement('div');
    newFieldDiv.classList.add('field');
    newFieldDiv.innerHTML = `
        <div class="field-group">
            <label for="fieldName${fieldCount}">Field Name:</label>
            <input type="text" id="fieldName${fieldCount}" name="fieldName[]" required>
        </div>
        <div class="field-group">
            <label for="fieldType${fieldCount}">Field Type:</label>
            <select id="fieldType${fieldCount}" name="fieldType[]" required>
                <option value="INT">INT</option>
                <option value="VARCHAR">VARCHAR</option>
                <option value="TEXT">TEXT</option>
                <option value="DATE">DATE</option>
            </select>
        </div>
        <div class="field-group">
            <label for="fieldSize${fieldCount}">Field Size:</label>
            <input type="number" id="fieldSize${fieldCount}" name="fieldSize[]" min="1">
        </div>
        <div class="field-group">
            <label for="primaryKey${fieldCount}">Primary Key:</label>
            <input type="checkbox" id="primaryKey${fieldCount}" name="primaryKey[]" value="true">
        </div>
    `;
    fieldsDiv.appendChild(newFieldDiv);
});

    </script>
</body>
</html>
